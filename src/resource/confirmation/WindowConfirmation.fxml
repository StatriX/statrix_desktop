<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.view.confirmation.ConfirmationController">
   <children>
       <VBox>
          <children>
              <Label prefHeight="21.0" prefWidth="332.0" text="Вы действительно хотите выйти из программы?">
                  <font>
                      <Font size="15.0" />
                  </font>
                  <VBox.margin>
                      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                  </VBox.margin>
              </Label>
              <HBox prefHeight="12.0" prefWidth="372.0" spacing="30.0">
                 <children>
                     <Button focusTraversable="false" maxWidth="100.0" minWidth="100.0" mnemonicParsing="false" onAction="#confirmAction" text="Да">
                         <font>
                             <Font size="15.0" />
                         </font>
                         <HBox.margin>
                             <Insets bottom="20.0" left="50.0" right="20.0" top="20.0" />
                         </HBox.margin>
                     </Button>
                     <Button fx:id="cancelButton" cancelButton="true" maxWidth="100.0" minWidth="100.0" mnemonicParsing="false" onAction="#closeModalWindow" text="Нет">
                         <HBox.margin>
                             <Insets bottom="20.0" left="20.0" top="20.0" />
                         </HBox.margin>
                     <font>
                        <Font size="15.0" />
                     </font>
                     </Button>
                 </children>
              </HBox>
          </children>
       </VBox>
   </children>
</AnchorPane>
