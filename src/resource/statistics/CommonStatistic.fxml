<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.view.statistics.CommonStatisticOverviewController">
    <GridPane>
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" minWidth="50.0"/>
            <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" minWidth="400.0"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="50.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="30.0" vgrow="ALWAYS"/>
            <RowConstraints maxHeight="700.0" minHeight="300.0" valignment="CENTER" vgrow="ALWAYS"/>
            <RowConstraints minHeight="50.0" vgrow="ALWAYS"/>
        </rowConstraints>
        <BorderPane minHeight="200.0" minWidth="200.0" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1"
                    GridPane.rowIndex="1">
            <top>
                <Label alignment="CENTER" contentDisplay="CENTER" text="Общая статистика"
                       BorderPane.alignment="CENTER">
                    <font>
                        <Font name="System Bold" size="25.0"/>
                    </font>
                </Label>
            </top>
            <center>
                <TableView fx:id="commonStatistics" focusTraversable="false" snapToPixel="false" BorderPane.alignment="CENTER">
                    <columns>
                        <TableColumn fx:id="personsName" prefWidth="75.0" text="Имя личности"/>
                    </columns>
                    <cursor>
                        <Cursor fx:constant="DEFAULT"/>
                    </cursor>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </center>
        </BorderPane>
        <Button fx:id="closeButton" mnemonicParsing="false" onAction="#closeModalWindow" text="Закрыть"
                GridPane.columnIndex="1" GridPane.rowIndex="2">
            <font>
                <Font name="System Bold" size="15.0"/>
            </font>
        </Button>
    </GridPane>
</AnchorPane>
